{
    "$schema": "http://json-schema.org/schema",
    "$id": "add-project",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What name would you like to use for the project?"
        }
    },
    "required": ["name"]
}
