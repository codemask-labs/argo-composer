{
    "$schema": "http://json-schema.org/schema",
    "$id": "init-project",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What name would you like to use for the project?"
        },
        "repoURL": {
            "type": "string",
            "description": "The URL of GitHub repository",
            "x-prompt": "What is the base URL of GitHub repository?"
        }
    },
    "required": ["name", "repoURL"]
}
