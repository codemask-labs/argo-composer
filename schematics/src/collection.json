{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "init-project": {
      "description": "Init an ArgoCD blank project",
      "factory": "./init-project/index#init",
      "schema": "./init-project/schema.json"
    },
    "add-project": {
      "description": "add a project into existing ArgoCD repository",
      "factory": "./add-project/index#add"
    },
    "add-app": {
      "description": "add an application into project",
      "factory": "./add-app/index#add"
    },
    "remove-app": {
      "description": "remove app from your project",
      "factory": "./remove-app/index#remove"
    },
    "remove-project": {
      "description": "remove project from your repository",
      "factory": "./remove-project/index#remove"
    },
    "copy-app": {
      "description": "copy app from project to other project",
      "factory": "./copy-app/index#command"
    }
  }
}
