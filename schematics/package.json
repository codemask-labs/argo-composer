    "@inquirer/select": "1.3.1",
    "typescript": "5.3.3",
    "yaml": "2.3.4"
  },
  "devDependencies": {
    "@schematics/angular": "17.0.7",
    "@types/jasmine": "5.1.4",
    "@types/node": "20.10.5",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/eslint-plugin-tslint": "6.15.0",
